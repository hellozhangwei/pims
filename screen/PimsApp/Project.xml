<?xml version="1.0" encoding="UTF-8"?>

<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-title="Project" default-menu-index="1">

    <transition name="createProject">
        <service-call name="create#WorkEffort"/>
        <default-response url="."/>
    </transition>

    <transition name="editProject">
        <default-response url="../EditProject"/>
    </transition>

    <transition name="deleteProject">
        <service-call name="project.RequestServices.delete#Project"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="WorkEffort" list="RequestList" distinct="false">
            <search-form-inputs/>
        </entity-find>
    </actions>

    <widgets>
        <container-dialog id="CreateProject" button-text="Create Project" width="800">
            <form-single name="CreateProject" transition="createProject">
                <field name="workEffortName">
                    <default-field title="Project Name"><text-line/></default-field>
                </field>
                <field name="facilityId">
                    <default-field title="Plant">
                        <drop-down style="chosen-wider">
                            <entity-options key="${facilityId}">
                                <entity-find entity-name="Facility">
                                    <econdition field-name="facilityTypeEnumId" operator="equals" value="FcTpPlant"/>
                                </entity-find>
                            </entity-options>
                        </drop-down>
                    </default-field>
                </field>

                <field name="description" >
                    <default-field title="Description"><text-area/></default-field>
                </field>

                <field name="submit button">
                    <default-field title="Create"><submit/></default-field>
                </field>
            </form-single>
        </container-dialog>

        <form-list name="ListRequests" list="RequestList">
            <field name="workEffortId">
                <header-field title="Project Id" show-order-by="case-insensitive"/>
                <default-field><link url="editProject" text="${workEffortId}"/></default-field>
            </field>
            <field name="workEffortName">
                <header-field title="Project Name" show-order-by="case-insensitive"/>
                <default-field><display/></default-field>
            </field>
            <field name="description">
                <header-field title="Description" show-order-by="case-insensitive"/>
                <default-field><display/></default-field>
            </field>
            <field name="statusId">
                <default-field><display/></default-field>
            </field>
            <!--
            <field name="deleteButton">
                <default-field title="Delete">
                    <link url="deleteProject" text="Delete" link-type="hidden-form-link">
                        <parameter name="workEffortId" value="${workEffortId}"/>
                        <parameter name="facilityId" value="${facilityId}"/>
                    </link>
                </default-field>
            </field>
            -->
        </form-list>
    </widgets>
</screen>
