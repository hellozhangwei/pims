<?xml version="1.0" encoding="UTF-8"?>

<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-title="Project" default-menu-index="1">

    <transition name="createProject">
        <service-call name="project.RequestServices.create#Project"/>
        <default-response url="."/>
    </transition>
    <transition name="editProject">
        <default-response url="../EditProject"/>
    </transition>
    <transition name="deleteProject">
        <service-call name="project.RequestServices.delete#Project"/>
        <default-response url="."/>
    </transition>
    <actions>
        <entity-find entity-name="WorkEffort" list="RequestList" distinct="false">
            <search-form-inputs/>
            <!--<date-filter/>-->
            <!--<econdition field-name="partyId" from="ec.user.userAccount.partyId"/>-->
            <!--<econdition field-name="workEffortTypeEnumId" value="WetProject"/>-->
            <!--<select-field field-name="workEffortId,workEffortName,priority,statusId,estimatedCompletionDate,estimatedWorkTime,actualWorkTime"/>-->
        </entity-find>
    </actions>

    <widgets>
        <container>
            <!--添加创建新纪录的按钮，以及调用服务-->
            <widgets>
                <section name="CreateRequest">
                    <widgets>
                        <container-dialog id="CreateProject" button-text="Create Project" width="800">
                            <form-single name="CreateProject" transition="createProject">
                                <field name="workEffortName">
                                    <default-field title="Project Name">
                                        <text-line />
                                    </default-field>
                                </field>
                                <!--Plant列表字段-->
                                <field name="facilityId">
                                    <default-field title="Plant">
                                        <drop-down style="chosen-wider">
                                            <entity-options key="${facilityId}">
                                                <entity-find entity-name="Facility">
                                                    <econdition field-name="facilityTypeEnumId" operator="equals" value="FcTpPlant"/>
                                                </entity-find>
                                            </entity-options>
                                        </drop-down>
                                        <!--<widget-template-include location="component://pims/screen/PimsApp/FacilityWidgetTemplates.xml#facilityDropDown">-->
                                            <!--<set field="facility_enum_type_Id" value="FcTpPlant" />-->
                                            <!--<set field="allowEmpty" value="true"/>-->
                                        <!--</widget-template-include>-->
                                    </default-field>
                                </field>

                                <field name="description" >
                                    <default-field title="Description">
                                        <text-area/>
                                    </default-field>
                                </field>

                                <field name="submit button">
                                    <default-field title="Create">
                                        <submit/>
                                    </default-field>
                                </field>
                            </form-single>
                        </container-dialog>
                    </widgets>
                </section>
            </widgets>
        </container>

        <form-list name="ListRequests" list="RequestList">
            <field name="workEffortId">
                <header-field title="Project Id" show-order-by="case-insensitive"/>
                <default-field>
                    <link url="editProject" text="${workEffortId}"/>
                    <!--<display/>-->
                </default-field>
            </field>
            <field name="workEffortName">
                <header-field title="Project Name" show-order-by="case-insensitive"/>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="description">
                <header-field title="Description" show-order-by="case-insensitive"/>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="workEffortTypeEnumId">
                <header-field title="work_effort_type_enum_id" show-order-by="case-insensitive"/>
                <default-field>
                    <display/>
                </default-field>
            </field>

            <field name="deleteButton">
                <default-field title="Delete">
                    <link url="deleteProject" text="Delete" link-type="hidden-form-link">
                        <parameter name="workEffortId" value="${workEffortId}"/>
                        <parameter name="facilityId" value="${facilityId}"/>
                    </link>
                </default-field>
            </field>

        </form-list>
    </widgets>
</screen>
