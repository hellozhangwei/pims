                                <!--</entity-find>-->
                            <!--</entity-options>-->
                        <!--</drop-down>-->
                    <!--</default-field>-->
                <!--</field>-->

                <field name="statusId" >
                    <default-field title="StatusId"><text-area/></default-field>
                </field>

                <field name="submit button">
                    <default-field title="Create"><submit/></default-field>
                </field>
            </form-single>
        </container-dialog>

        <form-list name="ListSystem" list="SystemList">
                <field name="assetId">
                    <header-field title="System Id" show-order-by="case-insensitive"/>
                    <default-field><link url="editSystem" text="${assetId}"/></default-field>
                </field>
            <field name="assetName">
                <header-field title="System Name" show-order-by="case-insensitive"/>
                <default-field><display/></default-field>
            </field>
            <field name="receivedDate">
                <header-field title="ReceivedDate" show-order-by="case-insensitive"/>
                <default-field><display/></default-field>
            </field>
            <field name="statusId">
                <default-field><display/></default-field>
            </field>
