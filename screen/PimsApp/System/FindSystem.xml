<?xml version="1.0" encoding="UTF-8"?>

<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-include="false">

    <transition name="createSystem">
        <actions>
            <service-call name="create#mantle.product.asset.Asset" in-map="context" out-map="context">
                <field-map field-name="assetTypeEnumId" value="PimsSystem"/>
                <!--<moqui.basic.Enumeration description="pims System" enumId="PimsSystem" enumTypeId="AssetType"/></-->
            </service-call>
            <service-call name="create#mantle.work.effort.WorkEffortAssetAssign" in-map="context"/>
        </actions>
        <default-response url="."/>
    </transition>

    <transition name="editSystem">
        <default-response url="/${pimsAppRoot}/System/EditSystem"/>
    </transition>

    <actions>
        <entity-find entity-name="WorkEffortAndAsset" list="SystemList">
            <!--<econdition field-name="assetId" ignore-if-empty="true"/>-->
            <econdition field-name="workEffortId" ignore-if-empty="true"/>
        </entity-find>
    </actions>

    <widgets>
        <container-dialog id="CreateSystem" button-text="Create System" width="800">
            <form-single name="CreateSystem" transition="createSystem">
                <field name="assetName">
                    <default-field title="System Name"><text-line/></default-field>
                </field>
                <field name="workEffortId">
                    <default-field title="Project">
                        <drop-down style="chosen-wider">
                            <entity-options key="${workEffortId}" text="${workEffortName}">
                                <entity-find entity-name="WorkEffort">
                                    <econdition field-name="workEffortTypeEnumId" operator="equals" value="PimsProject"/>
                                </entity-find>
                            </entity-options>
                        </drop-down>
                    </default-field>
                </field>
                <field name="comments" >
                    <default-field title="Comments"><text-area/></default-field>
                </field>

                <field name="submitbutton">
                    <default-field title="Create"><submit/></default-field>
                </field>
            </form-single>
        </container-dialog>
        <form-list name="ListSystem" list="SystemList">
            <field name="assetId">
                <header-field title="System Id" show-order-by="case-insensitive"/>
                <default-field><link url="editSystem" text="${assetId}"/></default-field>
            </field>
            <field name="assetName">
                <header-field title="System Name" show-order-by="case-insensitive"/>
                <default-field><display/></default-field>
            </field>
            <field name="workEffortName">
                <header-field title="Project" show-order-by="case-insensitive"/>
                <default-field><display/></default-field>
            </field>
            <!--
            <field name="comments">
                <default-field><display/></default-field>
            </field>
            -->
        </form-list>

    </widgets>
</screen>