<?xml version="1.0" encoding="UTF-8"?>

<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-include="false">

    <transition name="editSystem">
        <default-response url="/apps/pims/screen/PimsApp/System/EditSystem"/>
        <!--<default-response url="/apps/${appRoot}/System/EditSystem"/>-->
    </transition>

    <!--<transition name="deleteSystem">-->
        <!--<service-call name="project.RequestServices.delete#System"/>-->
        <!--<default-response url="."/>-->
    <!--</transition>-->

    <actions>
        <entity-find entity-name="Asset" list="SystemList" distinct="false">
            <search-form-inputs/>
        </entity-find>
    </actions>

    <widgets>
        <form-list name="ListSystem" list="SystemList">
                <field name="assetId">
                    <header-field title="System Id" show-order-by="case-insensitive"/>
                    <default-field><link url="editSystem" text="${assetId}, ${ec.web.getWebappRootUrl(false, null)},${appRoot}"/></default-field>
                </field>
            <field name="assetName">
                <header-field title="System Name" show-order-by="case-insensitive"/>
                <default-field><display/></default-field>
            </field>
            <field name="receivedDate">
                <header-field title="ReceivedDate" show-order-by="case-insensitive"/>
                <default-field><display/></default-field>
            </field>
            <field name="statusId">
                <default-field><display/></default-field>
            </field>
            <!--
            <field name="deleteButton">
                <default-field title="Delete">
                    <link url="deleteProject" text="Delete" link-type="hidden-form-link">
                        <parameter name="workEffortId" value="${workEffortId}"/>
                        <parameter name="facilityId" value="${facilityId}"/>
                    </link>
                </default-field>
            </field>
            -->
        </form-list>
    </widgets>
</screen>