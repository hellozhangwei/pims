<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-title="Sub System" default-menu-index="3">

    <parameter name="assetId"/>
    <transition name="UpdateSubSystem">
        <actions>
            <service-call name="update#Asset" in-map="context"/>
            <message>Update SubSystem successfully!</message>
        </actions>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find-one entity-name="Asset" value-field="asset"/>
    </actions>
    <widgets>
        <section name="ProjectMenu" condition="project">
            <widgets>
                <link url="newProject" text="New Project" link-type="hidden-form" icon="glyphicon glyphicon-plus"/>
            </widgets>
        </section>

        <section name="Update">
            <condition>
                <compare field="assetId" operator="not-empty"/>
            </condition>
            <widgets>
                <form-single name="EditSubSystem" transition="UpdateSubSystem" map="asset">
                    <field name="assetId">
                        <default-field title="Asset Id">
                            <hidden/>
                        </default-field>
                    </field>
                    <field name="assetName">
                        <default-field title="SubSystem Name">
                            <text-line/>
                        </default-field>
                    </field>

                    <field name="parentAssetId">
                        <default-field title="System Name">
                            <drop-down >
                                <entity-options key="${assetId}" text="${assetName}">
                                    <entity-find entity-name="Asset">
                                        <econdition field-name="assetTypeEnumId" operator="equals" value="PimsSystem"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="comments">
                        <default-field title="comments">
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="submitButton">
                        <default-field title="Update">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </widgets>
        </section>
    </widgets>
</screen>